@model Empresa

<div class="container mt-5 w-75">
    <form method="post" enctype="multipart/form-data">
        <div class="row">
            <div class="form-group col-6">
                <label asp-for="Nit"></label>
                <input asp-for="Nit" class="form-control" />
                <span asp-validation-for="Nit" class="text-danger"></span>
            </div>
            <div class="form-group col-6">
                <label asp-for="Nombre"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>

        </div>


        <div class="form-group">
            <label asp-for="Direccion"></label>
            <input asp-for="Direccion" class="form-control" />
            <span asp-validation-for="Direccion" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Telefono"></label>
            <input asp-for="Telefono" class="form-control" />
            <span asp-validation-for="Telefono" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Imagen"></label>
            <input asp-for="Imagen" class="form-control" />
            <span asp-validation-for="Imagen" class="text-danger"></span>
        </div>

        <div class="row">
            <div class="form-group col-6">
                <label asp-for="Usuario.Email"></label>
                <input asp-for="Usuario.Email" class="form-control" />
                <span asp-validation-for="Usuario.Email" class="text-danger"></span>
            </div>
            <div class="form-group col-6">
                <label asp-for="Usuario.Paswd"></label>
                <input type="password" asp-for="Usuario.Paswd" class="form-control" />
                <span asp-validation-for="Usuario.Paswd" class="text-danger"></span>
            </div>

        </div>
        <hr />
        <h6>Datos del representante legal</h6>

        <div class="row">
            <div class="form-group col-6">
                <label asp-for="Representante.Id"></label>
                <input asp-for="Representante.Id" class="form-control" />
                <span asp-validation-for="Representante.Id" class="text-danger"></span>
            </div>
            <div class="form-group col-6">
                <label asp-for="Representante.Nombre"></label>
                <input asp-for="Representante.Nombre" class="form-control" />
                <span asp-validation-for="Representante.Nombre" class="text-danger"></span>
            </div>
        </div>

        <div class="row">
            <div class="form-group col-6">
                <label asp-for="Representante.Apellido"></label>
                <input asp-for="Representante.Apellido" class="form-control" />
                <span asp-validation-for="Representante.Apellido" class="text-danger"></span>
            </div>
            <div class="form-group col-6">
                <label asp-for="Representante.Telefono"></label>
                <input asp-for="Representante.Telefono" class="form-control" />
                <span asp-validation-for="Representante.Telefono" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Representante.Direccion"></label>
            <input asp-for="Representante.Direccion" class="form-control" />
            <span asp-validation-for="Representante.Direccion" class="text-danger"></span>
        </div>


        <div class="modal-footer">
            <button type="submit" class="btn btn-primary">Guardar</button>
        </div>
    </form>


</div>
@model Cliente
<div class="container">
    <form class="row g-3 mt-3" method="post">
        <div class="col-6">
            <label  asp-for="Persona.Id" class="form-label">Identificación</label>
            <input asp-for="Persona.Id" class="form-control" />
            <span asp-validation-for="Persona.Id" class="text-danger"></span>
        </div>

        <div class="col-6">
            <label asp-for="Persona.Nombre" class="form-label">Nombre</label>
            <input asp-for="Persona.Nombre" class="form-control" />
            <span asp-validation-for="Persona.Nombre" class="text-danger"></span>
        </div>

        <div class="col-6">
            <label asp-for="Persona.Apellido" class="form-label">Apellido</label>
            <input asp-for="Persona.Apellido" class="form-control" />
            <span asp-validation-for="Persona.Apellido" class="text-danger"></span>
        </div>

        <div class="col-6">
            <label asp-for="Persona.Telefono"  class="form-label">Teléfono</label>
            <input asp-for="Persona.Telefono" class="form-control" />
            <span asp-validation-for="Persona.Telefono" class="text-danger"></span>
        </div>

        <div class="col-6">
            <label asp-for="Persona.Direccion" class="form-label">Dirección</label>
            <input asp-for="Persona.Direccion" class="form-control" />
            <span asp-validation-for="Persona.Direccion" class="text-danger"></span>
        </div>

        <div class="col-6">
            <label asp-for="Usuario.Email" class="form-label">Email</label>
            <input asp-for="Usuario.Email" class="form-control" />
            <span asp-validation-for="Usuario.Email" class="text-danger"></span>
        </div>

        <div class="col-6">
            <label asp-for ="Usuario.Paswd" class="form-label">Contraseña</label>
            <input asp-for="Usuario.Paswd" type="password" class="form-control" />
            <span asp-validation-for="Usuario.Paswd" class="text-danger"></span>
        </div>

        <div class="col-12">
            <button type="submit" class="btn btn-primary">Registrarme</button>
        </div>
        
    </form>
</div>
